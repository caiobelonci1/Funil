// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define os valores permitidos para o status
enum Status {
  INTERESSADO
  AGUARDANDO_PAGAMENTO
  PAGO
  FINALIZADO
  PERDIDO // Vamos adicionar, é útil
}

model User {
  id            String    @id @default(cuid())
  messengerId   String    @unique
  name          String?
  adTitle       String?   // Título do anúncio do Marketplace
  status        Status    @default(INTERESSADO) // Agora usa nosso Enum
  messages      Message[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  text      String
  senderId  String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
